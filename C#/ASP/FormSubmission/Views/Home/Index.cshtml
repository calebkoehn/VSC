@{
    ViewData["Title"] = "Home Page";
}
@model User
<style type="text/css">
    .custom-centered {
        margin: 0 auto;
        width: 300px;
    }
</style>

<div class="text-center">
    <h1>Enter Your Information</h1>
</div>

<div class="container">
    <form action="addUser" method="post" class="custom-centered">
        <div class="form-group mt-5">
            <label for="FirstName">First Name:</label>
            <input asp-for="FirstName" type="FirstName" class="form-control" id="FirstName" placeholder="Enter First Name">
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
        <div class="form-group mt-5">
            <label for="LastName">Last Name:</label>
            <input asp-for="LastName" type="LastName" class="form-control" id="LastName" placeholder="Enter Last Name">
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="Age">Age: </label>
            <input asp-for="Age" class="form-control" placeholder="Enter an age!">
            <span asp-validation-for="Age" class="text-danger"></span>
        </div>
        <div class="form-group mt-5">
            <label for="Email">Email:</label>
            <input asp-for="Email" type="Email" class="form-control" id="Email" placeholder="Enter an email">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group mt-5">
            <label for="Password">Password:</label>
            <input asp-for="Password" type="Password" class="form-control" id="Password" placeholder="Enter a Password">
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary mt-5">Submit</button>
    </form>
</div>
