@model Survey

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>
<style type="text/css">
    .custom-centered {
        margin: 0 auto;
        width: 300px;
    }
</style>
<body>
    <div class="container text-center">
        <h1 class="text-center">Dojo Survey</h1>
        <form action="addSurvey" method="post" class="custom-centered">
            <div class="form-group mt-5">
                <label for="name">Your Name:</label>
                <input asp-for="name" type="name" class="form-control" id="name" placeholder="Enter name">
                <span asp-validation-for="name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="dojolocation"> Dojo Location: </label>
                <select class="form-control" id="dojolocation" name="dojolocation">
                    <option disabled selected>Select a Location</option>
                    <option>NYC</option>
                    <option>Tulsa</option>
                    <option>Chicago</option>
                    <option>Seattle</option>
                    <option>San Jose</option>
                </select>
                <span asp-validation-for="dojolocation" class="text-danger"></span>

            </div>
            <div class="form-group">
                <label for="language">Favorite Language: </label>
                <select class="form-control" id="language" name="language">
                    <option disabled selected>Select a Language</option>
                    <option>C#</option>
                    <option>JavaScript</option>
                    <option>Python</option>
                    <option>HTML</option>
                    <option>Java</option>
                </select>
                <span asp-validation-for="language" class="text-danger"></span>

            </div>
            <div class="form-group">
                <label for="text">Comment (Optional): </label>
                <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" name="text"></textarea>
                <span asp-validation-for="text" class="text-danger"></span>
            </div>
        
            <button type="submit" class="btn btn-primary mt-5">Submit</button>
        </form>
    </div>
</body>
</html>