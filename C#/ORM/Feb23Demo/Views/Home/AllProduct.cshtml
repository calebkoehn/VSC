
<h1>All Products</h1>
<div class="d-flex flex-wrap">
    @{
        foreach(Product p in ViewBag.AllProducts)
        {
            <div class="card" style="width: 18rem;">
                <img src="@p.Picture" class="card-img-top" alt="@p.ProductName">
                <div class="card-body">
                    <h5>@p.ProductName</h5>
                    <p>$@p.Price</p>
                    <p>In Stock: @p.Quantity</p>
                </div>
            </div>
        }
    }
</div>