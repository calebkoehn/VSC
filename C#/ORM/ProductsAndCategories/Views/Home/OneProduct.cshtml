@model Product

<h1 class="text-center">@Model.Name</h1>
<div class="row mt-5">
    <div class="col">
        <h3>Categories</h3>
        <table class="table table-striped">
            @{
                foreach (Assocation c in Model.ProductList)
                {
                    <tr>
                        <td><p>-@c.Category.Name</p></td>
                    </tr>
                }
            }
        </table>
    </div>
    <div class="col">
        <h3>Add Category</h3>
        <form action="/addToCategory" method="post">
            <div class="form-group">
                <select name="CategoryId" class="form-control">
                    @{
                        foreach(Category r in ViewBag.AllCategories)
                        {
                            if(!Model.ProductList.Any(s => s.CategoryId == r.CategoryId)){
                                <option value="@r.CategoryId">@r.Name</option>
                            }
                        }
                    }
                </select>
            </div>
            <input type="hidden" name="ProductId" value="@Model.ProductId">
            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-primary">
            </div>
        </form>
    </div>
</div>