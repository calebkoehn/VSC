@model LoginUser

<div class="text-right">
    <a href="/Register" class="btn btn-secondary">Register</a>
</div>

<div class="text-center">
    <div class="row">
        <div class="col">
            <h3>Register</h3>
            <form action="/Login" method="post">
            <div class="form-group">
                <label for="LEmail">Email</label>
                <input asp-for="LEmail" class="form-control">
                <span asp-validation-for="LEmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="LPassword">Password</label>
                <input asp-for="LPassword" class="form-control">
                <span asp-validation-for="LPassword" class="text-danger"></span>
            </div>
            <input type="submit" name="Submit" class="btn btn-primary">
            </form>
        </div>
    </div>
</div>