@model Record
<h1>Add Records</h1>
<form action="/addRecord" method="post">
    <div class="form-group">
        <label for="Title">Title</label>
        <input asp-for="Title" class="form-control">
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Artist">Artist</label>
        <input asp-for="Artist" class="form-control">
        <span asp-validation-for="Artist" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Genre">Genre</label>
        <input asp-for="Genre" class="form-control">
        <span asp-validation-for="Genre" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="AlbumArt">Album Art</label>
        <input asp-for="AlbumArt" class="form-control">
        <span asp-validation-for="AlbumArt" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="RPM">RPM</label>
        <input asp-for="RPM" class="form-control">
        <span asp-validation-for="RPM" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Submit" class="btn btn-info">
    </div>
</form>
<hr>
<h2>All records</h2>
<div class="d-flex flex-wrap">
    @{
        foreach(Record r in ViewBag.AllRecords)
        {
            <div class="card" style="width: 18rem;">
            <img src="@r.AlbumArt" class="card-img-top" alt="@r.Title">
            <div class="card-body">
                <h5 class="card-title">@r.Title</h5>
                <p class="card-text">By: @r.Artist</p>
                <p class="card-text">Genre: @r.Genre</p>
                <p class="card-text">@r.RPM rpm</p>
            </div>
            </div>
        }
    }
</div>