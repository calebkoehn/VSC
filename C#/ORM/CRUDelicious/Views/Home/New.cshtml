@model Dish
<div class="text-right">
        <a href="/" class="btn btn-primary mt-5 float-end">Home</a>
</div>
<h1 class="text-center">Add a new Dish!</h1>
<form action="/process" method="post">
    <div class="form-group">
        <label for="Name">Name of Dish</label>
        <input asp-for="Name">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Chef">Chef's Name</label>
        <input asp-for="Chef">
        <span asp-validation-for="Chef" class="text-danger"></span>
    </div>
    <div class="dropdown">
        <label for="Tastiness">Tastiness</label>
        <select name="Tastiness" id="Tastiness">
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5</option>
        </select>
        <span asp-validation-for="Tastiness" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Calories">Calories</label>
        <input asp-for="Calories">
        <span asp-validation-for="Calories" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Description">Description</label>
        <input asp-for="Description">
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <input type="submit" name="Add Dish" class="btn btn-primary">
</form>